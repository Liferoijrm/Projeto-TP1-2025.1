<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: linear-gradient(to bottom right, #1B5E20, #004D40);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AdmClubeControllers.ControllerTelaCriarClubes">

    <!-- Botão de Menu -->
    <Button fx:id="menuMontagem" layoutX="20.0" layoutY="14.0" mnemonicParsing="false" onAction="#voltar" style="-fx-background-color: rgba(255,255,255,0.12); -fx-background-radius: 10;                    -fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;                    -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 3, 0, 0, 2);" text="☰" />

    <!-- Título -->
    <Label fx:id="labelTitulo" alignment="CENTER" layoutX="150.0" layoutY="20.0" prefHeight="40.0" prefWidth="300.0" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;                   -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.7), 2, 0, 0, 1);" text="Crie seus Clubes">
        <font>
            <Font size="24" />
        </font>
    </Label>

    <!-- Formulário de criação -->
    <HBox alignment="CENTER" layoutX="50.0" layoutY="90.0" prefHeight="150.0" prefWidth="500.0" spacing="40.0">

        <VBox alignment="CENTER" prefWidth="200.0" spacing="10.0">
            <Label style="-fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: 600;" text="Nome Clube 1" />
            <TextField fx:id="campoNomeClube1" prefHeight="30.0" promptText="Digite o nome" style="-fx-background-radius: 12; -fx-background-color: rgba(255,255,255,0.85);                               -fx-text-fill: #222; -fx-font-size: 14px; -fx-padding: 6 10 6 10;" />
        </VBox>

        <VBox alignment="CENTER" prefWidth="200.0" spacing="10.0">
            <Label style="-fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: 600;" text="Nome Clube 2" />
            <TextField fx:id="campoNomeClube2" prefHeight="30.0" promptText="Digite o nome" style="-fx-background-radius: 12; -fx-background-color: rgba(255,255,255,0.85);                               -fx-text-fill: #222; -fx-font-size: 14px; -fx-padding: 6 10 6 10;" />
        </VBox>
    </HBox>

    <!-- Botão Criar -->
    <Button fx:id="botaoCriar" layoutX="271.0" layoutY="280.0" mnemonicParsing="false" style="-fx-background-color: rgba(255,255,255,0.25); -fx-background-radius: 14;                    -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;                    -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.45), 4, 0, 0, 2);" text="Criar" />

</AnchorPane>
