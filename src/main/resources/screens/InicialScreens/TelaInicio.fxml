<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            prefWidth="600" prefHeight="400"
            style="-fx-background-color: linear-gradient(to bottom right, #1B5E20, #004D40);"
            fx:controller="controller.ControllerTelaInicio">

    <VBox alignment="CENTER" spacing="25.0"
          layoutX="150" layoutY="80" prefWidth="300"
          AnchorPane.topAnchor="80" AnchorPane.leftAnchor="150">

        <Label text="Cartolitos CF"
               style="-fx-text-fill: white;
                      -fx-font-size: 40px;
                      -fx-font-weight: bold;
                      -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.6), 3, 0, 0, 2);">
            <font>
                <Font name="Georgia" size="40"/>
            </font>
        </Label>

        <Button fx:id="botaoCriar" text="Criar UsuÃ¡rio" prefWidth="300" prefHeight="45"
