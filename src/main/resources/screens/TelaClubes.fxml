<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="screens.TelaClubes"
            prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color: #388e3c;">
    <VBox alignment="TOP_CENTER" spacing="18.0" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0">
        <HBox alignment="CENTER_LEFT" spacing="6.0">
            <Button fx:id="btnVoltar"
                    style="-fx-font-size: 18px; -fx-background-color: #fff; -fx-text-fill: #388e3c; -fx-font-weight: bold; -fx-background-radius: 8px;"
                    text="⟵ Voltar"/>
        </HBox>
        <Label text="CLUBES"
               style="-fx-font-size: 28px; -fx-text-fill: white; -fx-font-family: 'Helvetica Rounded', Arial, sans-serif; -fx-font-weight: bold;"/>
        <FlowPane fx:id="paneClubes" hgap="16" vgap="16" alignment="CENTER" VBox.vgrow="ALWAYS">
            <!-- Exemplo de botões estáticos, substitua por dinâmicos no controller -->
            <Button text="Flamengo" onAction="#abrirClubeFlamengo"
                    style="-fx-font-size: 18px; -fx-background-color: #fff; -fx-text-fill: #388e3c; -fx-font-weight: bold; -fx-background-radius: 8px;"/>
            <Button text="Real Madrid" onAction="#abrirClubeRealMadrid"
                    style="-fx-font-size: 18px; -fx-background-color: #fff; -fx-text-fill: #388e3c; -fx-font-weight: bold; -fx-background-radius: 8px;"/>
            <!-- Adicione mais botões conforme necessário -->
        </FlowPane>
    </VBox>
</AnchorPane>