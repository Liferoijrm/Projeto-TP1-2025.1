<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ControllerTelaVisualizacaoPartidas"
            prefHeight="600.0" prefWidth="900.0"
            style="-fx-background-color: #388e3c;">
    <VBox alignment="TOP_CENTER" spacing="24.0"
          AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <HBox alignment="CENTER_LEFT" spacing="8.0">
            <Button fx:id="btnVoltar"
                    text="âŸµ Voltar"
                    style="-fx-font-size: 22px; -fx-background-color: #fff; -fx-text-fill: #388e3c; -fx-font-weight: bold; -fx-background-radius: 8px;"/>
        </HBox>
        <Label text="Confrontos da Rodada"
               style="-fx-font-size: 48px; -fx-text-fill: white; -fx-font-family: 'Helvetica Rounded', Arial, sans-serif; -fx-font-weight: bold;" />
        <TableView fx:id="tableConfrontos"
                   style="-fx-font-size: 28px; -fx-font-family: 'Helvetica Rounded', Arial, sans-serif; -fx-font-weight: bold;"
                   VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colMandante" text="Mandante" />
                <TableColumn fx:id="colVisitante" text="Visitante" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </VBox>
</AnchorPane>