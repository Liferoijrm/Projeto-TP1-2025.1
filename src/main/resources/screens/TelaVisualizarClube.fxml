<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ControllerTelaVisualizarClube"
            prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color: #388e3c;">
    <VBox alignment="TOP_CENTER" spacing="18.0" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0">
        <HBox alignment="CENTER_LEFT" spacing="6.0">
            <Button fx:id="btnVoltar"
                    style="-fx-font-size: 18px; -fx-background-color: #fff; -fx-text-fill: #388e3c; -fx-font-weight: bold; -fx-background-radius: 8px;"
                    text="⟵ Voltar"/>
        </HBox>
        <Label fx:id="lblNomeClube"
               style="-fx-font-size: 28px; -fx-text-fill: white; -fx-font-family: 'Helvetica Rounded', Arial, sans-serif; -fx-font-weight: bold;"
               text="NOME DO CLUBE" />
        <TableView fx:id="tableJogadores"
                   style="-fx-font-size: 16px; -fx-font-family: 'Helvetica Rounded', Arial, sans-serif; -fx-font-weight: bold;"
                   VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colNome" text="Nome" prefWidth="220"/>
                <TableColumn fx:id="colPosicao" text="Posição" prefWidth="120"/>
                <TableColumn fx:id="colPreco" text="Preço" prefWidth="120"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </VBox>
</AnchorPane>