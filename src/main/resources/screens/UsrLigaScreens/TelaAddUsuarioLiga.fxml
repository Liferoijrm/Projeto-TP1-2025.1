<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            style="-fx-background-color: linear-gradient(to bottom right, #1B5E20, #004D40);"
            fx:controller="controller.UsrLigaControllers.ControllerTelaAddUsuarioLiga">
    <children>
        <!-- Botão de menu -->
        <Button fx:id="menuMontagem" layoutX="20.0" layoutY="14.0" mnemonicParsing="false" onAction="#voltar" style="-fx-background-color: rgba(255,255,255,0.12); -fx-background-radius: 10; -fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 3, 0, 0, 2);" text="☰" />

        <!-- Título -->
        <Label alignment="CENTER" layoutX="200.0" layoutY="16.0" prefHeight="40.0" prefWidth="200.0"
               text="Adicionar Usuários"
               style="-fx-text-fill: white;
                      -fx-font-size: 20px;
                      -fx-font-weight: bold;
                      -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.6), 2, 0, 0, 1);" />

        <!-- Campo de busca -->
        <TextField fx:id="campoBusca" layoutX="47.0" layoutY="68.0" prefWidth="506.0" prefHeight="28.0"
                   promptText="Buscar usuário por nome..."
                   style="-fx-background-color: white;
                          -fx-background-radius: 10;
                          -fx-font-size: 14px;
                          -fx-padding: 0 0 0 8;" />

        <!-- Lista de usuários -->
        <ListView fx:id="listViewUsuarios" layoutX="47.0" layoutY="105.0" prefHeight="220.0" prefWidth="506.0"
                  style="-fx-background-color: rgba(255,255,255,0.08);
                         -fx-background-radius: 8;
                         -fx-border-color: white;
                         -fx-border-radius: 8;" />

        <!-- Botão de adicionar -->
        <Button fx:id="botaoAdicionar" layoutX="247.0" layoutY="340.0" prefHeight="36.0" prefWidth="107.0"
                text="Adicionar"
                style="-fx-background-color: rgba(255,255,255,0.12);
                       -fx-background-radius: 10;
                       -fx-text-fill: white;
                       -fx-font-size: 16px;
                       -fx-font-weight: bold;
                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 3, 0, 0, 2);" />
    </children>
</AnchorPane>
