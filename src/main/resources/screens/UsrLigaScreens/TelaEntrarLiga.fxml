<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: linear-gradient(to bottom right, #1B5E20, #004D40);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.UsrLigaControllers.ControllerTelaEntrarLiga">
    <Button fx:id="menuMontagem" layoutX="20.0" layoutY="14.0" mnemonicParsing="false" onAction="#voltar" style="-fx-background-color: rgba(255,255,255,0.12); -fx-background-radius: 10; -fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 3, 0, 0, 2);" text="☰" />

    <!-- Título -->
    <Label fx:id="labelTitulo" alignment="CENTER" layoutX="175.0" layoutY="20.0" prefHeight="40.0" prefWidth="250.0" style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;                   -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.6), 2, 0, 0, 1);" text="Selecione sua Liga">
        <font>
            <Font size="22" />
        </font>
    </Label>

    <!-- Lista de Ligas -->
    <ListView fx:id="lvLigas" layoutX="92.0" layoutY="75.0" prefHeight="180.0" prefWidth="416.0" style="-fx-background-color: rgba(255,255,255,0.15); -fx-background-radius: 10;                      -fx-border-color: white; -fx-border-radius: 10; -fx-border-width: 1.4;" />

    <!-- Label da senha -->
    <Label layoutX="260.0" layoutY="265.0" prefHeight="20.0" prefWidth="82.0" style="-fx-text-fill: white; -fx-font-size: 12px; -fx-font-weight: bold;" text="Senha da Liga">
      <font>
         <Font size="8.0" />
      </font></Label>

    <!-- Campo de senha -->
    <PasswordField fx:id="pfSenha" layoutX="205.0" layoutY="285.0" prefHeight="28.0" prefWidth="190.0" promptText="Digite a senha" style="-fx-background-radius: 10; -fx-background-color: rgba(255,255,255,0.85);                           -fx-text-fill: #222; -fx-font-size: 13.5px; -fx-padding: 6 10 6 10;" />

    <!-- Botão Entrar -->
    <Button fx:id="btnEntrar" layoutX="247.0" layoutY="334.0" prefHeight="38.0" prefWidth="107.0" style="-fx-background-color: rgba(255,255,255,0.20); -fx-background-radius: 10;                    -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold;                    -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 3, 0, 0, 1);" text="Entrar" />
</AnchorPane>
