<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.ControllerTelaMenuUsuario"
            style="-fx-background-color: linear-gradient(to bottom right, #1B5E20, #004D40);">

    <children>
        <!-- Título centralizado no topo -->
        <Label fx:id="labelTitulo" layoutX="194.0" layoutY="30.0" prefHeight="41.0" prefWidth="212.0"
               alignment="CENTER" text="Cartolitos FC"
               style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;
                      -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.6), 2, 0, 0, 1);">
            <font>
                <Font size="24.0" />
            </font>
        </Label>

        <!-- VBox centralizada para os botões -->
        <VBox layoutX="225.0" layoutY="99.0" spacing="10.0" prefWidth="150.0">
            <children>
                <Button fx:id="ligaButton" text="Liga"
                        prefWidth="150.0" prefHeight="36.0"
                        style="-fx-background-color: rgba(255,255,255,0.12); -fx-background-radius: 10;
                               -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;
                               -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 3, 0, 0, 2);" />

                <Button fx:id="escalarButton" text="Escalar"
                        prefWidth="150.0" prefHeight="36.0"
                        style="-fx-background-color: rgba(255,255,255,0.12); -fx-background-radius: 10;
                               -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;
                               -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 3, 0, 0, 2);" />

                <Button fx:id="partidasButton" text="Partidas"
                        prefWidth="150.0" prefHeight="36.0"
                        style="-fx-background-color: rgba(255,255,255,0.12); -fx-background-radius: 10;
                               -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;
                               -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 3, 0, 0, 2);" />

                <Button fx:id="jogadoresButton" text="Jogadores"
                        prefWidth="150.0" prefHeight="36.0"
                        style="-fx-background-color: rgba(255,255,255,0.12); -fx-background-radius: 10;
                               -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;
                               -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 3, 0, 0, 2);" />

                <Button fx:id="editarPerfilButton" text="Editar Perfil"
                        prefWidth="150.0" prefHeight="36.0"
                        style="-fx-background-color: rgba(255,255,255,0.12); -fx-background-radius: 10;
                               -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold;
                               -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 3, 0, 0, 2);" />

                <Button fx:id="sairButton" text="Sair" onAction="#voltar"
                        prefWidth="150.0" prefHeight="36.0"
                        style="-fx-background-color: rgba(255,255,255,0.12); -fx-background-radius: 10;
                               -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;
                               -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 3, 0, 0, 2);" />
            </children>
        </VBox>
    </children>
</AnchorPane>
