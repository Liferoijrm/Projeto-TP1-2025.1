<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            style="-fx-background-color: linear-gradient(to bottom right, #1B5E20, #004D40);">
    <children>
        <!-- Botão de menu -->
        <Button fx:id="menuMontagem" layoutX="20.0" layoutY="14.0" mnemonicParsing="false" onAction="#abrirMenu"
                style="-fx-background-color: rgba(255,255,255,0.12);
                      -fx-background-radius: 10;
                      -fx-text-fill: white;
                      -fx-font-size: 20px;
                      -fx-font-weight: bold;
                      -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 3, 0, 0, 2);"
                text="☰" />

        <!-- Título central -->
        <Label fx:id="labelTitulo" alignment="CENTER" layoutX="169.0" layoutY="26.0"
               prefHeight="40.0" prefWidth="262.0" text="Time de Usuário"
               style="-fx-text-fill: white;
                     -fx-font-size: 20px;
                     -fx-font-weight: bold;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 2, 0, 0, 1);" />

        <!-- Pontuação -->
        <Label fx:id="labelPontuacao" layoutX="472.0" layoutY="35.0" prefWidth="100.0"
               text="30 pts"
               style="-fx-text-fill: white;
                     -fx-font-size: 16px;
                     -fx-font-weight: bold;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 2, 0, 0, 1);" />

        <!-- Lista de jogadores -->
        <ListView fx:id="listViewTime" layoutX="61.0" layoutY="84.0" prefHeight="230.0" prefWidth="479.0"
                  style="-fx-background-color: rgba(255,255,255,0.08);
                        -fx-background-radius: 8;
                        -fx-border-color: white;
                        -fx-border-radius: 8;" />
    </children>
</AnchorPane>
